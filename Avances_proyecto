    private void INGRESARMouseClicked(java.awt.event.MouseEvent evt) {                                      
        String usuario, contrase単a=null;
        usuario=txt_user.getText();
        contrase単a=txt_password.getText();
        if (usuario.equals("admin")&& contrase単a.equals("admin")){
            JOptionPane.showMessageDialog(this, "Login Completed");
        }else{
            JOptionPane.showMessageDialog(this, "Datos Incorrectos");
            this.txt_password.setText("");
        }
    }                                     

    private void SALIRMouseClicked(java.awt.event.MouseEvent evt) {                                   
        int a = JOptionPane.YES_NO_OPTION;
        int resultado = JOptionPane.showConfirmDialog(this, "多DESEA SALIR?","SALIR",a);
        if(resultado==0){
            System.exit(0);
        }
    }                                  

