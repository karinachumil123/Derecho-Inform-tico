    private void INGRESARMouseClicked(java.awt.event.MouseEvent evt) {                                      
        String usuario, contraseña=null;
        usuario=txt_user.getText();
        contraseña=txt_password.getText();
        if (usuario.equals("admin")&& contraseña.equals("admin")){
            
            // Genera un codigo aleatorio
            int min = 1000;
            int max = 9000;            
            Random random = new Random();
            String codigo = Integer.toString(random.nextInt(max + min) + min);
            // Envia mensaje de texto.
            Twilio.init(ACCOUNT_SID, AUTH_TOKEN);
            Message message = Message.creator(new PhoneNumber("+50231391709"),
            new PhoneNumber("+19206956413"), 
            "Bienvenido a nuestro sistema tu codigo es:"+ codigo).create();
            System.out.println(message.getSid());
            // Validar codigo SMS
            String cod2 = JOptionPane.showInputDialog(this,"Ingresa el codigo enviado a tu telefono:");

            if(cod2 == null ? codigo == null : cod2.equals(codigo))
            {
            JOptionPane.showMessageDialog(this, "Bienvenido");
            }
            else
            {
            JOptionPane.showMessageDialog(this, "Error: El codigo es incorrecto.");
            }

            
    
            
        }else{
            JOptionPane.showMessageDialog(this, "Datos Incorrectos");
            this.txt_password.setText("");
        }
    }                                     

    private void SALIRMouseClicked(java.awt.event.MouseEvent evt) {                                   
        int a = JOptionPane.YES_NO_OPTION;
        int resultado = JOptionPane.showConfirmDialog(this, "¿DESEA SALIR?","SALIR",a);
        if(resultado==0){
            System.exit(0);
        }
    }                                  

    private void OCULTARMouseClicked(java.awt.event.MouseEvent evt) {                                     
        VER.setVisible(true);
        OCULTAR.setVisible(false);
        txt_password.setEchoChar('●');
    }                                    

    private void VERMouseClicked(java.awt.event.MouseEvent evt) {                                 
        VER.setVisible(false);
        OCULTAR.setVisible(true);
        txt_password.setEchoChar((char)0);
    }                                

    private void MINIMIZARMouseClicked(java.awt.event.MouseEvent evt) {                                       
        this.setState(Interfaz.ICONIFIED);
    }                                      

    private void CERRARMouseClicked(java.awt.event.MouseEvent evt) {                                    
        int a = JOptionPane.YES_NO_OPTION;
        int resultado = JOptionPane.showConfirmDialog(this, "¿DESEA SALIR?","SALIR",a);
        if(resultado==0){
            System.exit(0);
        }
    }                                   

